<Page x:Class="StoreApp.Pages.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="White">
            <DataGrid Margin="20" HorizontalAlignment="Center" x:Name="ListItems"></DataGrid>
        </StackPanel>
        <Button x:Name="goBack" Click="goBack_Click" Grid.Row="1" FontSize="32" FontWeight="Bold" Background="White">GO BACK</Button>
    </Grid>
</Page>
